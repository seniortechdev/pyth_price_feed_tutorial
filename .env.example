# Pyth Price Feeds Demo - Environment Variables

# Solana RPC endpoint (defaults to devnet)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Pyth Hermes API endpoint
NEXT_PUBLIC_PYTH_HERMES_URL=https://hermes.pyth.network

# Optional: Custom refresh interval (milliseconds)
NEXT_PUBLIC_REFRESH_INTERVAL=5000

# Optional: Custom staleness threshold (seconds)
NEXT_PUBLIC_STALENESS_THRESHOLD=60

# Optional: Custom confidence threshold (0-1)
NEXT_PUBLIC_CONFIDENCE_THRESHOLD=0.1
